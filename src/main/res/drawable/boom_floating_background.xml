<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:endColor="#909bae"
                android:startColor="#c4cbd6" />
                
            <corners android:radius="360dp" />
            
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        
        </shape>
    </item>
    <item>
        <bitmap
            android:src="@drawable/boom_bg_texture"
            android:tileMode="repeat" />
    </item>
</layer-list>