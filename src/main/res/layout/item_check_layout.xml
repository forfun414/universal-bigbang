<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingLeft="30dp" >

    <ImageView
        android:id="@+id/item_check_left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="11dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_check_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:src="@drawable/selector_item_check_icon"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/item_check_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/item_check_icon"
        android:layout_toRightOf="@id/item_check_left_icon"
        android:duplicateParentState="true" >

        <TextView
            android:id="@+id/item_check_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/item_check_text_colorlist"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_check_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_switch_title"
            android:layout_below="@+id/item_switch_title"
            android:duplicateParentState="true"
            android:textColor="@color/item_check_summary_text_colorlist"
            android:textSize="13.5sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>